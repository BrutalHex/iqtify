@model QTF.Data.ViewModels.HomeViewModels.QuestionViewModel
@{
    ViewData["Title"] = "Home Page";
}

<div class="container">
    <div class="row clearfix">
    </div>
    <div class="col-md-1 column">
    </div>
    <div class="col-md-10 column">
        <br />
        <div class="progress">
            <div class="progress-bar" role="progressbar" style="width: @Model.Progress%;background-color:cadetblue">
            </div>
        </div>
        <form class="panel panel-primary" method="POST">
            <div class="panel-heading">
                <h3 class="panel-title">
                    @Model.Title
                </h3>
            </div>
            <div class="panel-body">
                <span>@Model.Content</span>
                <br /><br />
                <textarea rows="6" name="answer" style="width: 100%" autofocus></textarea>
            </div>
            <div class="panel-footer">
                <input type="submit" value="Submit" class="btn btn-primary"></input>
            </div>
        </form>
        <div class="col-md-1 column">
        </div>
    </div>
</div>